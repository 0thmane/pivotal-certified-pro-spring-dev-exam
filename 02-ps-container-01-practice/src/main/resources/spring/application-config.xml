<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="simplUserService" class="com.ps.services.impl.SimpleUserService">
		<property name="userRepo" ref="userRepo"/>
	</bean>

	<!-- Loads users from the data source -->
	<bean id="userRepo" class="com.ps.repos.impl.JdbcUserRepo">
		<property name="dataSource" ref="dataSource"/>
	</bean>

	<bean id="dataSource" destroy-method="close" class="javax.sql.DataSource">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
		<property name="url" value="jdbc:oracle:thin:@sample:1521:PET"/>
		<property name="username" value="sample"/>
		<property name="password" value="sample"/>
	</bean>

	<!-- Loads pets from the data source -->
	<bean id="petRepo" class="com.ps.repos.impl.JdbcPetRepo">
		<property name="dataSource" ref="dataSource"/>
	</bean>

	<!-- Records requests confirmation records in the data source -->
	<bean id="requestRepo" class="com.ps.repos.impl.JdbcRequestRepo">
		<property name="dataSource" ref="dataSource"/>
	</bean>

	<!-- Records requests confirmation records in the data source -->
	<bean id="responseRepo" class="com.ps.repos.impl.JdbcResponseRepo">
		<property name="dataSource" ref="dataSource"/>
	</bean>

	<!-- Records requests confirmation records in the data source -->
	<bean id="reviewRepo" class="com.ps.repos.impl.JdbcReviewRepo">
		<property name="dataSource" ref="dataSource"/>
	</bean>

</beans>
